<Window x:Class="WPF_Projekt.AddSubtaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource AddSubtaskWindow}" Height="150" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="{DynamicResource txt_tytuł_podzadania}" Margin="0,0,0,10" FontWeight="Bold"/>
        <TextBox x:Name="InputTextBox" MinWidth="250" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="70" Margin="5" IsDefault="True" Click="Ok_Click" />
            <Button Content="{DynamicResource txt_anuluj}" Width="70" Margin="5" IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
