<Window x:Class="WPF_Projekt.SubtaskInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowe podzadani" Height="150" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <Label Content="Nazwa podzadania:"/>
        <TextBox x:Name="SubtaskNameTextBox" Margin="0 0 0 10"/>
        <Button Content="OK" Width="60" HorizontalAlignment="Right" Click="OkButton_Click"/>
    </StackPanel>
</Window>
